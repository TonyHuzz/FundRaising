<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @slider_items.each_with_index do |item, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= (index == 0) ? "active" : "" %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner" style="height: 500px">
    <% @slider_items.each_with_index do |item, index| %>
      <div class="carousel-item <%= (index == 0) ? "active" : "" %>">
        <img src="<%= item.cover_image_url %>" class="d-block w-100" alt="..." style="height: 500px; object-fit: cover" >
      </div>
    <% end %>
  </div>
</div>


<div id="home_index" style="margin: 56px 0;">
  <div class="container">
    <p>正在募資</p>
    <% unless @projects.blank? %>
      <%= render 'projects/card_list', projects: @projects %>
    <% else %>
      <div class="col-12">
        <p>現在沒有進行中的募資！！</p>
      </div>
    <% end %>
    <hr/>
  </div>
  <% unless @successful_projects.blank? %>
    <div class="container">
      <p>募資成功</p>
      <%= render 'projects/card_list', projects: @successful_projects %>
      <hr/>
    </div>
  <% end %>
  <% unless @past_projects.blank? %>
    <div class="container">
      <p>過去專案</p>
      <%= render 'projects/card_list', projects: @past_projects %>
      <hr/>
    </div>
  <% end %>
</div>
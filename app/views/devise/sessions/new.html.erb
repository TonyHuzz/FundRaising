<div class="container">
  <div class="row">
    <div class="d-none d-sm-block col-sm-1 col-md-2 col-lg-3"></div>
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="mx-auto" style="margin: 64px; padding: 56px 32px; border: 2px solid rgba(0, 0, 0, 0.16);">
        <h2 style="padding: 16px 0;"><%= t('.sign_in') %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
          </div>
          <br/>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
          </div>
          <br/>
          <%= render "devise/shared/forget_password_link" %>

          <div class="actions" style="padding: 16px 0;">
            <%= f.submit t(".sign_in"), class: "btn btn-primary btn-block" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div>
            <hr style="width:44%;display: inline-block; vertical-align: middle;"/>
            <span>or</span>
            <hr style="width:44%;display: inline-block; vertical-align: middle;"/>
          </div>
          <div>
            <%= render "devise/shared/google" %>
            <p>
              <small>
                我們永遠不會再不經過您的同意下隨意使用您的資料
              </small>
            </p>
          </div>
          <div>
            <hr/>
            <span>第一次進來？</span>
            <%=render "devise/shared/sign_up" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="d-none d-sm-block col-sm-1 col-md-2  col-lg-3"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="d-none d-sm-block col-sm-1 col-md-2 col-lg-3"></div>
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="mx-auto" style="margin: 64px; padding: 56px 32px; border: 2px solid rgba(0, 0, 0, 0.16);">
        <h2 style="padding: 16px 0;"><%= t('.sign_up') %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
          </div>
          <br/>
          <div class="field">
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>
          <br/>
          <div class="field">
            <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "off" %>
            <% if @minimum_password_length %>
              <em>(<%= t('.characters_minimum', number: @minimum_password_length) %>)</em>
            <% end %><br />
          </div>
          <br/>
          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Re-enter password", autocomplete: "off", class: "form-control" %>
          </div>
          <div class="actions" style="padding: 16px 0;">
            <%= f.submit t('.sign_up'), class: "btn btn-primary btn-block" %>
          </div>
          <div>
            <%= render "devise/shared/google" %>
            <p>
              <small>
                我們永遠不會再不經過您的同意下隨意使用您的資料
              </small>
            </p>
          </div>
          <div>
            <hr/>
            <span>沒收到確認信？</span>
            <%= render "devise/shared/send_confirmation_instruction_link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-12">
      <div style="margin: 32px auto">
        <h3>我的贊助:</h3>
        <br/>
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">贊助</th>
            <th scope="col">方案</th>
            <th scope="col">價格</th>
            <th scope="col">狀態</th>
            <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          <% @pledges.each_with_index do |pledge, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= pledge.project_name %></td>
              <td><%= pledge.support_name %></td>
              <td><%= pledge.payment.try(:end_price) %></td>
              <td><%= pledge.status_to_string %></td>
              <td><%= link_to "查看", pledge_path(pledge) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


